<div class="postContainer">
  <div class="postContent">
    <div class="postingImage">
      <img
        src="https://bulma.io/images/placeholders/128x128.png"
        alt="postImage"
      />
    </div>
    <div class="postInfo">
      <div>
        <h1>{{title}}</h1>
        <div class="postGenInfo">
          <p>Publisher: {{category}}</p>
          <p>Genre: {{genre}}</p>
          <p>System: {{system}}</p>
          <p>Condition: {{condition}}</p>
        </div>
        {{!-- <div class="postDesc">
        <p>Description: {{description}}</p>
        </div> --}}
      </div>
      <div>
        <div class="postPrice">
          <p>Price: ${{price}}</p>
        </div>
        <div class="postUser">
          <p>Posted by: {{user.username}}</p>
        </div>
      </div>

    </div>
  </div>
</div>

